{# templates/topic/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Edit Topic{% endblock %}

{% block body %}
    <h1>Edit Topic</h1>

    {{ form_start(form) }}
        {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
        <button class="btn btn-primary mt-3">Save</button>
    {{ form_end(form) }}

    <a href="{{ path('app_topic_show', {'id': topic.id}) }}" class="btn btn-link mt-3">Back to topic</a>
{% endblock %}